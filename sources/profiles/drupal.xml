<?xml version="1.0"?>
<config version="1.4.6">
	<!-- Debug settings -->
	<is_debug_modus>n</is_debug_modus> 

	<!-- Datebase settings -->
	<databases>
	</databases>

	<!-- Code repository settings -->
	<archive>
		<git>
			<source_folder>sources</source_folder>
			<branch>develop</branch>
		</git>
	</archive>

	<!-- Backup settings -->
	<backup>
		<retention_days>3</retention_days> 
		<make_database_backup>y</make_database_backup>
		<make_file_backup>y</make_file_backup>
	</backup>

	<!-- Preserve data -->
	<preserve_data>
		<config_files>
			<file>sites/all/settings.php</file>
			<file>sites/default/settings.php</file>
		</config_files>
		<files> 
			<file>.htaccess</file>
			<file>robots.txt</file>
			<file>sitemap.xml</file>
		</files>
		<folders>
			<folder>sites/all/files</folder>
			<folder>sites/default/files</folder>
			<folder>sites/all/private</folder>  
			<folder>sites/default/private</folder>
		</folders>
		<symlink> 
		</symlink>
		<google_files>y</google_files>
	</preserve_data>


	<!-- Clear data -->
	<clear_data>
		<folders> 
		</folders>
		<files> 
		</files>
	</clear_data>

	<!-- User permissions -->
  <permissions>
    <user>www-data</user> 
    <group>www-data</group> 
  </permissions>
</config>
