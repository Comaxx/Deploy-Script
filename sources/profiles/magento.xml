<?xml version="1.0"?>
<config version="1.3">
	<include_profile></include_profile>
	<is_debug_modus>n</is_debug_modus> <!-- pre set -->

	<databases>
		<database>
			<database_config_file>app/etc/local.xml</database_config_file><!-- pre set -->
			<read_from_config>y</read_from_config>
			<host></host> <!-- localhost -->
			<username></username> <!-- root -->
			<password></password>
			<dbname></dbname>
		</database>
	</databases>

	<archive>
		<git>
			<repo></repo> <!-- git@github.com:nedstars/Deploy-Script.git -->
			<branch></branch>
			<source_folder>sources</source_folder> <!-- web -->
		</git>
	</archive>

	<notifications>
		<email_addresses>
			<address></address><!-- pre set -->
		</email_addresses>
		<!-- <pushover_users>
			<user></user>
		</pushover_users> -->
	</notifications>

	<paths>
		<web_live_path></web_live_path> <!-- /var/projects/www/staging  -->
		<temp_new_path></temp_new_path> <!-- /var/projects/www/staging.new.tmp  -->
		<temp_old_path></temp_old_path> <!-- /var/projects/www/staging.old.tmp  -->
	</paths>
	<backup>
		<folder></folder> <!-- /var/projects/www/backup -->
		<retention_days>30</retention_days> <!-- 30 -->
		<make_database_backup>y</make_database_backup><!-- y or n-->
		<make_file_backup>y</make_file_backup><!-- y or n-->
	</backup>
	<preserve_data>
		<folders> <!-- pre set -->
			<folder>media</folder>
		</folders>
		<files> <!-- pre set -->
			<file>app/etc/local.xml</file> <!-- config file -->
		</files>
		<google_files>y</google_files><!-- pre set -->
	</preserve_data>
	<clear_data>
		<folders> <!-- pre set -->
		</folders>
		<files> <!-- pre set -->
		</files>
	</clear_data>
	<permisions>
		<user>apache</user> <!-- pre set -->
		<group>apache</group> <!-- pre set -->
	</permisions>
</config>
